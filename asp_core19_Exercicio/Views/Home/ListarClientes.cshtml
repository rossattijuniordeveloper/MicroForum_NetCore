@model IEnumerable<MicroForum_NetCore.Models.Cliente>
@{
    ViewData["SubTitle"] = "Clientes Cadastrados";
}

<div class="row">
    <div class="col-6">
        <h2 class="titulo">@ViewBag.SubTitle</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-controller="Home" asp-action="AdicionarCliente" class="btn btn-primary text-right">Adicionar Cliente...</a>
    </div>

</div>
<!-- APRESENTAÇÃO DOS DADOS DOS CLIENTES -->
@{
    if (Model.Count() == 0)
    {
        <h6>Não há Clientes Cadastrados!</h6>
    }
    else
    {   <!-- Apresenta os clientes Cadastrados-->
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Nome</th>
                    <th>Telefone</th>
                    <th>Morada</th>
                    <th>Cep</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.Nome</td>
                    <td>@item.Telefone</td>
                    <td>@item.Morada</td>
                    <td>@item.Cep</td>

                    <td class="text-right">
                        <a asp-controller="Home" asp-action="AlterarCliente" asp-route-id="@item.Id_Cliente" class="btn btn-primary"><i class="fa fa-pencil"></i> Alterar</a>
                        <a asp-controller="Home" asp-action="ApagarClientePerguntar" asp-route-id="@item.Id_Cliente" class="btn btn-primary"><i class="fa fa-trash"></i> Excluir</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
        <p>Total.: <b>@Model.Count()</b></p>
        

        
    }
}
<div>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Voltar</a>
</div>




