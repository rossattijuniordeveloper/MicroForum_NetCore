@model IEnumerable<MicroForum_NetCore.Models.Produto>
@{
    ViewData["SubTitle"] = "Produtos Cadastrados";
}

<div class="row">
    <div class="col-6">
        <h2 class="titulo">@ViewBag.SubTitle</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-controller="Home" asp-action="ProdutoAdicionar" class="btn btn-primary text-right">Adicionar Produto...</a>
    </div>

</div>
<!-- APRESENTAÇÃO DOS DADOS DOS Produtos -->
@{
    if (Model.Count() == 0)
    {
        <h6>Não há Produtos Cadastrados!</h6>
    }
    else
    { <!-- Apresenta os Produtos Cadastrados-->
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Nome</th>
                    <th>Preço R$ </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nome</td>
                        <td>@item.Price</td>
                        <td class="text-right">
                            <a asp-controller="Home" asp-action="ProdutoAlterar" asp-route-id="@item.Id_Produto" class="btn btn-primary"><i class="fa fa-pencil"></i> Alterar</a>
                            <a asp-controller="Home" asp-action="ProdutoApagarPerguntar" asp-route-id="@item.Id_Produto" class="btn btn-primary"><i class="fa fa-trash"></i> Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <p>Total.: <b>@Model.Count()</b></p>

    }
}
<div>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Voltar</a>
</div>




