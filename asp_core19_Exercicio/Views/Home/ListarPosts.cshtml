@model IEnumerable<MicroForum_NetCore.Models.Posts>
@{
    ViewData["Title"] = "ListarPosts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="row">
    <div class="col-6">
        <h2 class="titulo">@ViewBag.SubTitle</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Página Inicial</a>
        <a asp-controller="Home" asp-action="PostsAdicionar" class="btn btn-primary text-right">Adicionar Posts...</a>
    </div>
</div>
<!-- APRESENTAÇÃO DOS DADOS DE POSTS DO USUARIO LOGADO -->
@{
    if (Model.Count() == 0)
    {
        <h6>Não há Postagens Cadastradas para este usuário!</h6>
    }
    else
    { <!-- Apresenta os Posts Cadastrados-->
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>                    
                    <th>Titulo</th>
                    <th>Mensagem</th>
                    <th>Data</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.titulo</td>
                        <td>@item.mensagem</td>
                        <td>@item.atualizacao</td>

                        <td class="text-right">
                            <a asp-controller="Home" asp-action="ApagarPostPerguntar" asp-route-id="@item.id_posts" class="btn btn-primary"><i class="fa fa-trash"></i> Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>


        </table>
        <p>Total.: <b>@Model.Count()</b></p>
    }
}


